source https://rubygems.org

gem 'awesome_print'   # Pretty print Ruby objects with proper indentation and colors
gem 'colorator'       # String core extensions for terminal coloring.
gem 'colored'         # Add some color to your life.
gem 'colorize'        # Add color methods to String class
gem 'rainbow'         # Colorize printed text on ANSI terminals
gem 'rouge'           # A pure-ruby colorizer based on pygments
gem 'term-ansicolor'  # Ruby library that colors strings using ANSI escape sequences
gem 'wirb'            # Wavy IRB: Colorizes irb results.
